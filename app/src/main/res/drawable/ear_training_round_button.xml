<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:color="@color/custom_teal_blue"
                        android:width="2dp" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="oval">
                    <gradient android:angle="270" android:startColor="@color/custom_button_start_blue" android:endColor="@color/custom_button_end_blue" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:color="@color/custom_background_ear_training_deep_blue"
                        android:width="2dp" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="oval">
                    <gradient android:angle="270" android:startColor="@color/custom_button_start_blue" android:endColor="@color/custom_button_end_blue" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:color="@color/custom_missed_round_yellow"
                        android:width="2dp" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape android:shape="oval">
                    <gradient android:angle="270" android:startColor="@color/custom_button_start_blue" android:endColor="@color/custom_button_end_blue" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>